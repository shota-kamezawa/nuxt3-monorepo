{
  "extends": "@repo/tsconfig/base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "@packages/utils/*": ["../../utils/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "../utils"
    }
  ]
}
