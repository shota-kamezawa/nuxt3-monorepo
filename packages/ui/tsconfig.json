{
  "extends": "@repo/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@packages/utils/*": ["../utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "../utils"
    }
  ]
}
