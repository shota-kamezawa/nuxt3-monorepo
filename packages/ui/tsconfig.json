{
  "extends": "@repo/tsconfig/base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["vue"],
    "baseUrl": "./src",
    "paths": {
      "@root/examples/*": ["../../../examples/*"],
      "@packages/utils/*": ["../../utils/src/*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "eslint.config.js",
    "vitest.config.ts"
  ],
  "references": [
    {
      "path": "../utils"
    }
  ]
}
